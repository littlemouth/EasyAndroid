<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@id/tab_title_framelayout_ea_dfst"
        android:layout_width="match_parent"
        android:layout_height="50dp"></FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/tab_viewpager_ea_dfst"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@id/tab_button_outer_linearlayout_ea_dfst"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <View
            android:id="@id/tab_divide_ea_dfst"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#CCCCCC"></View>
        <LinearLayout
            android:id="@id/tab_button_linearlayout_ea_dfst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
