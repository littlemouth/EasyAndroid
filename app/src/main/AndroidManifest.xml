<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dfst.easyandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" android:label="EasyAndroid Demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PageViewActivity"/>
        <activity android:name=".activity.SimpleGroupListActivity"/>
        <activity android:name=".activity.CommonGroupListActivity"/>
        <activity android:name=".activity.GroupListActivity"/>
        <activity android:name=".activity.TabViewActivity"/>
        <activity android:name=".activity.ContractActivity"/>
        <activity android:name=".activity.SlideListActivity"/>
        <activity android:name=".activity.FallViewActivity"/>
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
</manifest>
